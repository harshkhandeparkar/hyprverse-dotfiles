# VPN_CONN_NAME environment variable should be set

status() {
	nmcli -g GENERAL.STATE con show "$VPN_CONN_NAME"
}

toggle() {
	vpn_status=$(status)
	if [[ "$vpn_status" == "activated" ]];
	then
		nmcli con down "$VPN_CONN_NAME"
	else
		nmcli con up "$VPN_CONN_NAME"
	fi
}

if [[ "$1" == "toggle" ]];
then
	toggle
else
	vpn_status=$(status)
	echo $vpn_status
fi